<h1>Achat</h1>

<%= form_tag subscriptions_order_payments_path(@subscription_order) do %>
  <article>
    <label class="amount">
      <span>Montant: <%= humanized_money_with_symbol(@subscription_order.amount) %></span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Ma commande"
    data-email="<%= current_user.email %>"
    data-description="Commande: <%= @subscription.name %>"
    data-amount="<%= @subscription_order.amount_cents %>"
    data-currency="<%= @subscription_order.amount.currency %>"></script>
<% end %>
