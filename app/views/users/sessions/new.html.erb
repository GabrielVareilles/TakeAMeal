<div class="sign-in-wrapper">
  <div id="jumbo" class="jumbotron" style="background: linear-gradient(135deg, rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url('<%= image_path('plat.jpg') %>');  background-repeat: no-repeat; background-position: center; background-size: cover; ">
  <div class="container">
    <div class="col-md-4 col-md-offset-4">
      <div class="formulaire">
      <div class="text-center">
        <h2 id="connection-title">Connexion</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions-sign-in">
        <%= f.button :submit, "Connexion" %>
      </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
    </div>
  </div>
</div>
</div>

