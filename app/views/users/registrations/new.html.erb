<div class="sign-up-wrapper">
  <div class="container">
    <div class="text-center">
      <h2 id="sign-up-title">Inscription</h2>
      <h5 id="sign-in-prop">Vous avez déjà un compte ? <%= link_to 'Cliquez ici',  new_user_session_path %></h5>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="col-md-6 col-md-offset-3">
        <div class="col-sm-6">
          <%= f.input :first_name, required: true, autofocus: true %>
        </div>
        <div class="col-sm-6">
          <%= f.input :last_name, required: true %>
        </div>
        <div class="col-sm-6">
          <%= f.input :post_code, required: true %>
        </div>
        <div class="col-sm-6">
          <%= f.input :phone_number, required: true %>
        </div>
        <div class="col-xs-12">
          <%= f.input :email, required: true %>
        </div>
        <div class="col-xs-12">
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="col-xs-12">
          <%= f.input :password_confirmation, required: true %>
        </div>
        <div class="form-actions-sign-up col-xs-12">
          <% if params[:param] == "1" %>
          <%= hidden_field_tag 'subscription_id', "1" %>
          <% else %>
          <%= hidden_field_tag 'subscription_id', "2" %>
          <% end %>
          <%= f.button :submit, 'Inscription'%>
        </div>
        <% end %>
        <div class="col-xs-12">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
