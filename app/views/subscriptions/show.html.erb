<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @subscription.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag("pizza.jpg", width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <p>Some awesome description of our amazing subscription.</p>
      <p>Prix: <%= humanized_money_with_symbol(@subscription.price_cents) %></p>
      <%= form_tag subscriptions_orders_path do %>
        <%= hidden_field_tag 'subscription_id', @subscription.id %>
        <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
