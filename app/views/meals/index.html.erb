<% if @open %>

<%= render partial: "components/jumbottron", locals: { title: "Bonjour, " + current_user.first_name, subtitle: "Aujourd’hui, nous vous proposons les plats suivants:", redirection: "#discover", cta: "Découvrir"} %>

<div id="discover" class="wrapper-meals">
  <div class="container">
    <% @meals.each do |meal| %>
    <div class="col-md-4 col-sm-6 col-xs-12 ">
      <div class="card">
        <div class="info-meals">
          <img src="https://place-hold.it/200x200" >
          <div class="card-block-info">
            <% @restaurant = Restaurant.find(meal.restaurant_id)%>
            <h3 class="card-title"><%= @restaurant.name%></h3>
            <p class="card-text"><%= meal.name %></p>
            <p class="card-text-description"><small class="text-muted"><%= meal.description %></small></p>
          </div>
        </div>
        <%= link_to 'Commander', meal_path(meal), class: 'divLink' %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<% else %>

<%= render partial: "components/jumbottron", locals: { title: "Bonjour, " + current_user.first_name, subtitle: "vous pourrez faire votre choix entre 17h et 11h.", redirection: "#discover", cta: "En savoir plus"} %>

<div id="discover" class="wrapper-meals">
  <div class="closed-container">
    <h1>Les Cuisines sont actuellement fermées.</h1>
    <h2>Revenez entre 17h et 11h pour faitre votre choix.</h2>
    <p>A tout à l'heure !</p>
  </div>
</div>

<% end %>
