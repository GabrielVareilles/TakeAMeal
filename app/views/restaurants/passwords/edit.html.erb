<div class="sign-in-wrapper">
  <div id="jumbo" class="jumbotron" style="background: linear-gradient(135deg, rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url('<%= image_path('plat.jpg') %>');  background-repeat: no-repeat; background-position: center; background-size: cover; ">
  <div class="container">
    <div class="col-md-4 col-md-offset-4">
      <div class="formulaire">
      <div class="text-center">
        <h2 id="connection-title">Change your password</h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Change my password" %>
            </div>
          <% end %>
          <%= render "restaurants/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>
