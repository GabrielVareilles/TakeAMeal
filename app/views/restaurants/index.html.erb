<%= render "components/jumbottron" %>
<%= render "components/explanations" %>

<div id="index" class="wrapper">
  <div class="container">
    <div class="card-deck">
      <div class="card">
        <% @restaurants.each do |restaurant| %>
          <div class="col-md-4 col-sm-6 image" >
            <div class="div-row">
              <div class="info-meals">
                <img src="https://place-hold.it/200x200" >
                <div class="card-block-info">
                  <h3 class="card-title"><%= restaurant.name%></h3>
                  <p class="card-text"><%= restaurant.category %></p>
                  <p class="card-text-description"><small class="text-muted"><%= restaurant.address %></small></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


