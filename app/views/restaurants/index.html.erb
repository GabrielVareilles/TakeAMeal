<%= render "components/explanations" %>

<div class="wrapper-meals">
  <div class="plans-container">
    <h1>Les meilleurs restaurants de votre ville</h1>
  </div>
  <div class="container">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 col-sm-6 col-xs-12" >
        <div class="card">
          <div class="info-meals">
            <div class="img-restaurant" style="background: url('<%=restaurant.photo%>'); background-position: center; background-size: cover; background-repeat: no-repeat; height: 200px; width: 200px;">
            </div>
            <div class="card-block-info">
              <h3 class="card-title"><%= restaurant.name%></h3>
              <p class="card-text"><%= restaurant.category %></p>
              <p class="card-text-description"><small class="text-muted"><%= restaurant.address %></small></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
<div class="subscription-wrapper">
  <div id="subscription" class="plans-container">
    <h1> Choisissez une offre adaptée </h1>
    <h4>Chaque offre donne accès à un nombre défini de déjeuners à </h4>
